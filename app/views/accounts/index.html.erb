<div class="max-w-7xl mx-auto">
  <div class="sm:flex sm:items-center sm:justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Your Accounts</h1>
      <p class="mt-2 text-sm text-gray-700">Manage your personal and team accounts</p>
    </div>
    <div class="mt-4 sm:mt-0">
      <%= link_to "Create New Account", new_account_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" %>
    </div>
  </div>

  <div class="mt-8 grid gap-6 lg:grid-cols-2">
    <% @accounts.each do |account| %>
      <div class="bg-white overflow-hidden shadow rounded-lg <%= 'ring-2 ring-primary-500' if Current.account&.id == account.id %>">
        <div class="px-4 py-5 sm:p-6">
          <div class="flex items-center justify-between">
            <div>
              <h3 class="text-lg font-medium text-gray-900 flex items-center">
                <%= account.name %>
                <% if account.personal %>
                  <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                    Personal
                  </span>
                <% else %>
                  <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
                    Team
                  </span>
                <% end %>
                <% if Current.account&.id == account.id %>
                  <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-primary-100 text-primary-800">
                    Current
                  </span>
                <% end %>
              </h3>
              <p class="mt-1 text-sm text-gray-500">
                <%= pluralize(account.account_users_count, 'member') %>
                <% if account.owner?(current_user) %>
                  Â· You are the owner
                <% end %>
              </p>
            </div>
          </div>

          <div class="mt-4 flex space-x-3">
            <% if can?(:switch, account) && Current.account&.id != account.id %>
              <%= button_to "Switch", switch_account_path(account), method: :post, class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" %>
            <% end %>
            <% if can?(:show, account) %>
              <%= link_to "View", account_path(account), class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" %>
            <% end %>
            <% if can?(:update, account) && !account.personal %>
              <%= link_to "Settings", account_settings_path(account), class: "inline-flex items-center px-3 py-2 border border-gray-300 shadow-sm text-sm leading-4 font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
