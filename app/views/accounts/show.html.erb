<div class="max-w-7xl mx-auto">
  <div class="sm:flex sm:items-center sm:justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900"><%= @account.name %></h1>
      <p class="mt-2 text-sm text-gray-700">
        <% if @account.personal %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
            Personal Account
          </span>
        <% else %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
            Team Account
          </span>
        <% end %>
      </p>
    </div>
    <div class="mt-4 sm:mt-0 flex space-x-3">
      <% if can?(:update, @account) %>
        <%= link_to "Edit Account", edit_account_path(@account), class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" %>
      <% end %>
      <% unless @account.personal %>
        <%= link_to "Account Settings", account_settings_path(@account), class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" %>
      <% end %>
    </div>
  </div>

  <div class="mt-8 grid grid-cols-1 gap-6 lg:grid-cols-3">
    <!-- Account Details Card -->
    <div class="lg:col-span-2 bg-white overflow-hidden shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Account Details</h3>

        <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
          <div>
            <dt class="text-sm font-medium text-gray-500">Account Name</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @account.name %></dd>
          </div>

          <% if @account.subdomain.present? %>
            <div>
              <dt class="text-sm font-medium text-gray-500">Subdomain</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @account.subdomain %></dd>
            </div>
          <% end %>

          <div>
            <dt class="text-sm font-medium text-gray-500">Owner</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <%= @account.owner.name || @account.owner.email %>
            </dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-gray-500">Members</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <%= pluralize(@account.account_users_count, 'member') %>
            </dd>
          </div>

          <% if @account.billing_email.present? %>
            <div>
              <dt class="text-sm font-medium text-gray-500">Billing Email</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @account.billing_email %></dd>
            </div>
          <% end %>

          <div>
            <dt class="text-sm font-medium text-gray-500">Created</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <%= @account.created_at.strftime("%B %d, %Y") %>
            </dd>
          </div>
        </dl>

        <% if @account.extra_billing_info.present? %>
          <div class="mt-6">
            <dt class="text-sm font-medium text-gray-500">Additional Billing Information</dt>
            <dd class="mt-1 text-sm text-gray-900 whitespace-pre-wrap"><%= @account.extra_billing_info %></dd>
          </div>
        <% end %>

        <% if @account.logo.attached? %>
          <div class="mt-6">
            <dt class="text-sm font-medium text-gray-500 mb-2">Logo</dt>
            <dd class="mt-1">
              <%= image_tag @account.logo.variant(:medium), class: "h-32 w-32 object-cover rounded-lg" %>
            </dd>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Subscription Card -->
    <div class="lg:col-span-1 space-y-6">
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Subscription</h3>

          <% if @account.subscribed? %>
            <div class="space-y-3">
              <div>
                <dt class="text-sm font-medium text-gray-500">Current Plan</dt>
                <dd class="mt-1">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-sm font-medium bg-green-100 text-green-800">
                    <%= @account.subscription_plan&.name || 'Subscribed' %>
                  </span>
                </dd>
              </div>

              <% if @account.on_trial? %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Trial Status</dt>
                  <dd class="mt-1">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
                      Trial Active
                    </span>
                  </dd>
                </div>
              <% end %>

              <%= link_to "Manage Billing", account_billing_path(@account), class: "mt-4 block w-full text-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" %>
            </div>
          <% else %>
            <div class="text-center">
              <p class="text-sm text-gray-500 mb-4">No active subscription</p>
              <%= link_to "View Plans", pricing_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Quick Actions Card -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Quick Actions</h3>

          <div class="space-y-3">
            <% unless @account.personal %>
              <%= link_to "Manage Members", account_settings_members_path(@account), class: "block w-full text-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" %>
              <%= link_to "Invite Team Member", new_account_invitation_path(@account), class: "block w-full text-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" %>
            <% end %>
            <%= link_to "View All Accounts", accounts_path, class: "block w-full text-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
