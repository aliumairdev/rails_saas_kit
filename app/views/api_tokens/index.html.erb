<div class="py-6">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">API Tokens</h1>
      <p class="mt-2 text-sm text-gray-600">Manage API tokens for programmatic access</p>
    </div>
    <div class="flex gap-2">
      <%= link_to "API Documentation", "#", class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
      <%= link_to "Create Token", new_api_token_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
    </div>
  </div>

  <!-- New Token Alert (shown after creation) -->
  <% if flash[:api_token].present? %>
    <div class="mb-6 bg-yellow-50 border border-yellow-200 rounded-lg p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3 flex-1">
          <h3 class="text-sm font-medium text-yellow-800">Save your API token!</h3>
          <div class="mt-2 text-sm text-yellow-700">
            <p class="mb-2">This is the only time you'll see this token. Make sure to copy it now:</p>
            <div class="bg-white border border-yellow-300 rounded p-3 font-mono text-sm break-all flex items-center justify-between">
              <code id="api-token-value"><%= flash[:api_token] %></code>
              <button onclick="copyToken()" class="ml-4 inline-flex items-center px-3 py-1 border border-transparent text-sm font-medium rounded-md text-blue-700 bg-blue-100 hover:bg-blue-200">
                Copy
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <% unless Current.account&.pro_plan? %>
    <div class="mb-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-blue-800">Upgrade to Pro for API Access</h3>
          <div class="mt-2 text-sm text-blue-700">
            <p>API access is only available on the Pro plan. <%= link_to "Upgrade now", account_billing_path(Current.account), class: "font-medium underline" %> to start using our API.</p>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- API Tokens List -->
  <div class="bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
      <h3 class="text-lg font-medium leading-6 text-gray-900">Your API Tokens</h3>
      <p class="mt-1 text-sm text-gray-500">Tokens provide access to the Review Collector API</p>
    </div>

    <% if @api_tokens.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Name
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Token
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Last Used
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Expires
              </th>
              <th scope="col" class="relative px-6 py-3">
                <span class="sr-only">Actions</span>
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @api_tokens.each do |token| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4">
                  <div class="text-sm font-medium text-gray-900"><%= token.name %></div>
                  <div class="text-xs text-gray-500">Created <%= time_ago_in_words(token.created_at) %> ago</div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <code class="text-xs bg-gray-100 px-2 py-1 rounded">***<%= token.token[-8..-1] %></code>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <% if token.last_used_at %>
                    <%= time_ago_in_words(token.last_used_at) %> ago
                  <% else %>
                    <span class="text-gray-400">Never</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm">
                  <% if token.expires_at %>
                    <% if token.expired? %>
                      <span class="text-red-600">Expired</span>
                    <% else %>
                      <span class="text-gray-500"><%= token.expires_at.strftime("%b %d, %Y") %></span>
                    <% end %>
                  <% else %>
                    <span class="text-gray-400">Never</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <%= button_to "Revoke", api_token_path(token), method: :delete, data: { turbo_confirm: "Are you sure you want to revoke this token? This action cannot be undone." }, class: "text-red-600 hover:text-red-900" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="px-4 py-12 text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"/>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No API tokens</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by creating your first API token.</p>
        <div class="mt-6">
          <%= link_to "Create Token", new_api_token_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script>
  function copyToken() {
    const tokenValue = document.getElementById('api-token-value').innerText;
    navigator.clipboard.writeText(tokenValue).then(() => {
      alert('Token copied to clipboard!');
    });
  }
</script>
