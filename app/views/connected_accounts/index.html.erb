<div class="min-h-screen bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-4xl mx-auto">
    <div class="bg-white shadow-sm rounded-lg">
      <!-- Header -->
      <div class="px-6 py-5 border-b border-gray-200">
        <h1 class="text-2xl font-bold text-gray-900">
          <%= t("connected_accounts.index.title") %>
        </h1>
        <p class="mt-1 text-sm text-gray-600">
          <%= t("connected_accounts.index.description") %>
        </p>
      </div>

      <!-- Connected Accounts List -->
      <div class="px-6 py-6">
        <% if @connected_accounts.any? %>
          <div class="space-y-4">
            <% @available_providers.each do |provider| %>
              <% connected_account = @connected_providers[provider.to_s] %>
              <div class="flex items-center justify-between p-4 border border-gray-200 rounded-lg hover:border-gray-300 transition-colors">
                <div class="flex items-center space-x-4">
                  <!-- Provider Icon/Name -->
                  <div class="flex-shrink-0">
                    <div class="h-12 w-12 rounded-full bg-gray-100 flex items-center justify-center">
                      <span class="text-xl font-semibold text-gray-600">
                        <%= t("oauth.#{provider}").first %>
                      </span>
                    </div>
                  </div>

                  <!-- Provider Details -->
                  <div>
                    <h3 class="text-lg font-medium text-gray-900">
                      <%= t("oauth.#{provider}") %>
                    </h3>
                    <% if connected_account %>
                      <p class="text-sm text-green-600 flex items-center">
                        <svg class="h-4 w-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                        </svg>
                        <%= t("oauth.connected") %>
                      </p>
                      <% if connected_account.email.present? %>
                        <p class="text-xs text-gray-500 mt-1">
                          <%= connected_account.email %>
                        </p>
                      <% end %>
                    <% else %>
                      <p class="text-sm text-gray-500">
                        <%= t("oauth.not_connected") %>
                      </p>
                    <% end %>
                  </div>
                </div>

                <!-- Actions -->
                <div>
                  <% if connected_account %>
                    <%= button_to t("oauth.disconnect"),
                        connected_account_path(connected_account),
                        method: :delete,
                        data: {
                          turbo_confirm: "Are you sure you want to disconnect your #{t("oauth.#{provider}")} account?",
                          turbo: false
                        },
                        class: "px-4 py-2 text-sm font-medium text-red-600 hover:text-red-700 border border-red-600 hover:border-red-700 rounded-md transition-colors" %>
                  <% else %>
                    <%= button_to t("oauth.connect", provider: t("oauth.#{provider}")),
                        omniauth_authorize_path(:user, provider),
                        data: { turbo: false },
                        class: "px-4 py-2 text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 rounded-md transition-colors" %>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <!-- Empty State -->
          <div class="text-center py-12">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">
              <%= t("connected_accounts.index.no_accounts") %>
            </h3>
            <p class="mt-1 text-sm text-gray-500">
              <%= t("connected_accounts.index.connect_new") %>
            </p>

            <!-- Provider Buttons -->
            <div class="mt-6 space-y-3">
              <% @available_providers.each do |provider| %>
                <%= button_to t("oauth.connect", provider: t("oauth.#{provider}")),
                    omniauth_authorize_path(:user, provider),
                    data: { turbo: false },
                    class: "w-full max-w-xs mx-auto flex justify-center px-4 py-2 text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 rounded-md transition-colors" %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Back Link -->
      <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
        <%= link_to "Back to Account Settings", edit_user_registration_path, class: "text-sm font-medium text-primary-600 hover:text-primary-700" %>
      </div>
    </div>
  </div>
</div>
