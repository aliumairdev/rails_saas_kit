<%
  # Toast Component
  # Usage:
  #   <%= render "shared/toast", title: "Toast Title", description: "Description text", icon_name: :success, link_text: "View", link_url: "#", dismissable: true, dismiss_after: nil %>
  #
  # Parameters:
  #   title: String (required)
  #   description: String (optional)
  #   icon_name: :default, :alert, :notice, :success (optional)
  #   link_text: String (optional)
  #   link_url: String (optional)
  #   dismissable: Boolean (default: true)
  #   dismiss_after: Integer in milliseconds (optional, auto-dismiss after this time)

  title ||= "Notification"
  description ||= nil
  icon_name ||= nil
  link_text ||= nil
  link_url ||= nil
  dismissable = true if dismissable.nil?
  dismiss_after ||= nil

  # Set up data attributes for Stimulus controller
  controller_data = "toast"
  data_attrs = {}
  data_attrs["toast-dismissable-value"] = dismissable.to_s
  data_attrs["toast-dismiss-after-value"] = dismiss_after.to_s if dismiss_after
%>

<div class="toast"
     data-controller="<%= controller_data %>"
     <% data_attrs.each do |key, value| %>
       data-<%= key %>="<%= value %>"
     <% end %>
     role="alert">
  <div class="toast-content">
    <% if icon_name %>
      <div class="toast-icon">
        <% case icon_name.to_sym %>
        <% when :success %>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="toast-icon-success">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
        <% when :alert %>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="toast-icon-alert">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
          </svg>
        <% when :notice %>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="toast-icon-notice">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
          </svg>
        <% else %>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="toast-icon-default">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
          </svg>
        <% end %>
      </div>
    <% end %>

    <div class="toast-body">
      <h3 class="toast-title"><%= title %></h3>
      <% if description %>
        <p class="toast-description"><%= description %></p>
      <% end %>
      <% if link_text && link_url %>
        <%= link_to link_text, link_url, class: "toast-link" %>
      <% end %>
    </div>

    <% if dismissable %>
      <button type="button" class="toast-close" data-action="click->toast#dismiss" aria-label="Close">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </button>
    <% end %>
  </div>
</div>
