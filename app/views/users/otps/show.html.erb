<div class="max-w-md mx-auto p-6">
  <h1 class="text-3xl font-bold mb-6 text-center">Two-Factor Authentication</h1>

  <div class="bg-white shadow-lg rounded-lg p-6">
    <p class="text-gray-700 mb-6 text-center">Enter the 6-digit code from your authenticator app</p>

    <%= form_with url: users_otp_path, method: :post, class: "space-y-4" do |f| %>
      <div>
        <%= f.label :otp_code, "Verification Code", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :otp_code,
            required: true,
            placeholder: "000000",
            maxlength: 6,
            autofocus: true,
            class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 font-mono text-2xl text-center",
            autocomplete: "off" %>
      </div>

      <%= f.submit "Verify", class: "w-full px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 font-semibold" %>
    <% end %>

    <div class="mt-4 pt-4 border-t border-gray-200">
      <p class="text-sm text-gray-600 text-center">Lost your device?</p>
      <p class="text-xs text-gray-500 text-center mt-1">You can use one of your backup codes instead</p>
    </div>
  </div>

  <div class="mt-4 text-center">
    <%= link_to "Back to Sign In", new_user_session_path, class: "text-sm text-blue-600 hover:text-blue-800" %>
  </div>
</div>
